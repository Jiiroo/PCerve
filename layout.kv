<NavDrawer>

    BoxLayout:
        orientation: 'vertical'
        padding: '8dp'
        spacing: '8dp'
        Image:
            source: 'LOGO.png'
            size_hint: .5, None

        ScrollView:
            MDList:
                OneLineIconListItem:
                    text: 'Profile'
                    on_release:

                        root.go_profile()

                OneLineIconListItem:
                    text: 'Reservation Cart'
                    on_release:
                        root.go_cart()


                OneLineIconListItem:
                    text: 'Reservation Status'
                    on_release:
                        root.go_status()


                OneLineIconListItem:
                    text: 'Settings'
                    on_release:
                        root.go_settings()


                OneLineIconListItem:
                    text: 'About Us'
                    on_release:
                        root.go_about()


                OneLineIconListItem:
                    text: 'Logout'
                    on_release:
                        root.out()


<Profile>
    name: 'profile'

    bgcolor: 0/255, 139/255, 139/255, 1
    canvas:
        Color:
            rgba: self.bgcolor
        Rectangle:
            pos: self.pos
            size: self.size

    FloatLayout:
        MDTextButton:
            text:'[color=#FFFFFF][b]Back[/b][/color]'
            markup: True
            md_bg_color: 1,1,1,1
            size_hint: 5, 5
            pos_hint: {'center_x': .5, 'center_y': .5}
            on_release:
                root.go_back()


<Store>
    name: 'store'

    bgcolor: 0/255, 139/255, 139/255, 1
    canvas:
        Color:
            rgba: self.bgcolor
        Rectangle:
            pos: self.pos
            size: self.size

    MDNavigationLayout:

        ScreenManager:

            Screen:

                BoxLayout:
                    orientation: "vertical"
                    spacing: "10dp"

                    MDToolbar:
                        title: "Stores"
                        md_bg_color: app.theme_cls.primary_color
                        elevation: 10
                        left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]

                    MDScrollViewRefreshLayout:
                        id: refresh_layout
                        refresh_callback: root.refresh_callback
                        root_layout: root

                        MDGridLayout:
                            id: content
                            adaptive_height: True
                            cols: 2

        MDNavigationDrawer:
            id: nav_drawer

            NavDrawer:
                id: content_drawer
<Card>
    orientation: "vertical"
    size_hint: 1, None
    canvas:
        Color:
            rgba: 0/255,206/255,209/255, 1
        Rectangle:
            pos: self.pos
            size: self.size

    MDBoxLayout:
        Image:
            source: root.icon
            size_hint: .5, 1

        MDBoxLayout:
            cols: 1
            orientation: "vertical"
            size_hint: 1, 1
            MDLabel:
                text: root.title
                font_style: "H5"
                theme_text_color: 'Custom'
                halign: 'center'
                text_color: 25/255, 0, 0, 1



