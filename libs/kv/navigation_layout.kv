<NavLayoutScreen>:
    MDNavigationLayout
        id: navigation_layout
        ScreenManager:
            Screen:
                BoxLayout:
                    orientation: 'vertical'

                    MDToolbar:
                        title: 'PCerve'
                        elevation: 10
                        md_bg_color: app.colors(2)
                        left_action_items: [['menu', lambda x: nav_drawer.set_state('open') ]]
                    ScreenManager:
                        id: manage

                        Store:
                            id: store
                            name: 'store'

                        ProductTypes:
                            id: product_type
                            name: 'product_type'

                        Products:
                            id: products
                            name: 'products'

                        ProductDetails:
                            id: details
                            name: 'details'

                        ReservationCart:
                            id: reservation_cart
                            name: 'reservation_cart'

                        ReservationStatus:
                            id: reservation_stats
                            name: 'reservation_stats'

                        ChangePass:
                            id: change_pass
                            name: 'change_pass'

                        AppSettings:
                            id: app_settings
                            name: 'app_settings'

                        AboutUs:
                            id: about
                            name: 'about'


        MDNavigationDrawer:
            id: nav_drawer

            BoxLayout:
                orientation: 'vertical'
                padding: "8dp"
                spacing: '8dp'
                AnchorLayout:
                    anchor_x: "center"
                    size_hint_y: .1

                    Image:
                        id: avatar
                        source: "./assets/LOGO.png"

                ScrollView:
                    MDList:
                        OneLineIconListItem:
                            text: 'Stores'
                            on_release:
                                app.show_screen('store')
                                nav_drawer.set_state('close')

                        OneLineIconListItem:
                            text: 'Reservation Cart'
                            on_release:
                                app.show_screen('reservation_cart')
                                nav_drawer.set_state('close')

                        OneLineIconListItem:
                            text: 'Reservation Status'
                            on_release:
                                app.show_screen('reservation_stats')
                                nav_drawer.set_state('close')

                        OneLineIconListItem:
                            text: 'Settings'
                            on_release:
                                app.show_screen('app_settings')
                                nav_drawer.set_state('close')

                        OneLineIconListItem:
                            text: 'About Us'
                            on_release:
                                app.show_screen('about')
                                nav_drawer.set_state('close')

                        OneLineIconListItem:
                            text: 'Logout'
                            on_release:
                                root.logout()
                                app.show_screen('store')
                                app.root.current = 'login'
                                nav_drawer.set_state('close')