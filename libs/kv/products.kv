<ProductCard>
    orientation: "vertical"
    size_hint: 1, None
    canvas:
        Color:
            rgba: app.colors(1)
        Rectangle:
            pos: self.pos
            size: self.size
    on_release:
        app.show_screen('details')

    MDBoxLayout:
        Image:
            source: root.image
            size_hint: .5, 1

        MDBoxLayout:
            cols: 1
            orientation: "vertical"
            size_hint: 1, 1
            MDLabel:
                text: root.name
                font_style: "Caption"
                theme_text_color: 'Custom'
                halign: 'center'
                text_color: 25/255, 0, 0, 1

<Products>
    name: 'products'
    canvas:
        Color:
            rgba: app.colors(0)
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'

        MDScrollViewRefreshLayout:
            id: refresh_layout
            refresh_callback: root.refresh_callback
            root_layout: root

            MDGridLayout:
                id: content
                adaptive_height: True
                cols: 1
                padding: '8dp'
                spacing: '6dp'